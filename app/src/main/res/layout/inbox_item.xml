<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:id="@+id/message_status_icon"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_margin="4dp"
    app:srcCompat="@drawable/ic_email_unread"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
        android:id="@+id/message_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Message Subject"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp"
        android:fontFamily="@font/open_sans_regular"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/message_status_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/remove_message"
        />
    <TextView
        android:id="@+id/message_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This message is about bla bla bla bla bla"
        android:layout_marginHorizontal="8dp"
        android:fontFamily="@font/open_sans_regular"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/message_status_icon"
        app:layout_constraintTop_toBottomOf="@id/message_title"
        app:layout_constraintEnd_toStartOf="@+id/remove_message"
        />
    <ImageView
        android:id="@+id/remove_message"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_trash_bin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>