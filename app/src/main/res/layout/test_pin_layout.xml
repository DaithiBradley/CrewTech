<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/ivBack"
        android:background="?android:selectableItemBackground"
        android:focusable="false"
        android:text="Enter Your PIN"
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_arrow_left" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/header"
        android:layout_marginTop="20dp"
        android:background="@color/colorSlightGray" />


    <EditText
        android:id="@+id/etCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:ellipsize="end"
        android:inputType="number"
        android:maxLines="1"
        android:minHeight="0dp"
        android:scrollbars="horizontal"
        android:textSize="48sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/etCode"
        android:layout_margin="32dp"
        android:columnCount="3"
        android:rowCount="4">


        <TextView
            android:id="@+id/button_no_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/layout_ring_blue"
            android:gravity="center"
            android:text="1"
            android:textAppearance="?android:textAppearanceMedium"

            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/button_no_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/layout_ring_blue"

            android:gravity="center"
            android:text="2"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/button_no_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:background="@drawable/layout_ring_blue"
            android:gravity="center"
            android:text="3"
            android:textAppearance="?android:textAppearanceMedium"

            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/button_no_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:background="@drawable/layout_ring_blue"
            android:gravity="center"
            android:text="4"
            android:textAppearance="?android:textAppearanceMedium"

            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/button_no_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:background="@drawable/layout_ring_blue"
            android:gravity="center"
            android:text="5"
            android:textAppearance="?android:textAppearanceMedium"

            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/button_no_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:background="@drawable/layout_ring_blue"

            android:gravity="center"
            android:text="6"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/button_no_7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"

            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:background="@drawable/layout_ring_blue"
            android:gravity="center"
            android:text="7"

            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/button_no_8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"

            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:background="@drawable/layout_ring_blue"

            android:gravity="center"
            android:text="8"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/button_no_9"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:background="@drawable/layout_ring_blue"

            android:gravity="center"
            android:text="9"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/button_remove"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceMedium"
            app:srcCompat="@drawable/ic_pin_left" />

        <TextView
            android:id="@+id/button_no_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/layout_ring_blue"
            android:gravity="center"

            android:text="0"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/ivNext"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"

            android:layout_margin="8dp"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceMedium"
            app:srcCompat="@drawable/ic_pin_right" />


    </GridLayout>
</RelativeLayout>